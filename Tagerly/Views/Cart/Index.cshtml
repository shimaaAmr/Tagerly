@model CartViewModel

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom styles -->
<style>

    .cart-summary-bg {
        background-color: #BF9264 !important;
    }

    .custom-badge {
        background-color: rgb(165, 97, 42) !important;
    }

    /* Improved text clarity for summary section */
    .order-summary-text {
        font-weight: 600;
        font-size: 1.05rem;
    }

    /* Enhanced payment images */
    .payment-method-img {
        height: 32px;
        margin: 0 8px;
    }
</style>

<section class="mt-5 container">
    <h1 class="mb-6 display-5 fw-bold text-center">Your Cart</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-4 g-md-8">
        <!-- Cart Items -->
        <div class="col-12 col-lg-6 col-xl-7">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="d-none d-sm-table-cell"></th>
                            <th class="ps-sm-3">Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.CartItems?.Any() == true)
                        {
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td class="d-none d-sm-table-cell">
                                        <img src="@item.ImageUrl" class="img-fluid" style="height: 80px;"
                                             onerror="this.src='/images/placeholder-product.jpg'">
                                    </td>
                                    <td>
                                        <h6 class="fw-bolder">@item.ProductName</h6>
                                        <small class="text-muted">@item.ProductDescription</small>
                                    </td>
                                    <td>
                                        <span class="badge custom-badge rounded-pill" >@item.Quantity</span>
                                    </td>
                                    <td>
                                        @((item.Quantity * item.ProductPrice).ToString("C"))
                                    </td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-link p-0 text-danger">
                                                <i class="ri-close-circle-line ri-lg"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="ri-shopping-cart-line ri-3x text-muted"></i>
                                    <p class="mt-3">Your cart is empty</p>
                                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-2">
                                        <i class="ri-store-2-line"></i> Browse Products
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-12 col-lg-6 col-xl-5">
            <div class="cart-summary-bg p-4 p-md-5 text-white rounded-3">
                <h3 class="fs-3 fw-bold text-center mb-4">Order Summary</h3>
                <div class="py-3 border-bottom border-white opacity-25">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="order-summary-text">Subtotal (@(Model?.CartItems?.Sum(i => i.Quantity) ?? 0) items)</span>
                        <span class="order-summary-text">@Model?.SubTotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="order-summary-text">Shipping</span>
                        <span class="text-white order-summary-text">Free</span>
                    </div>
                </div>

                <div class="py-3 border-bottom border-white opacity-25 mb-3">
                    <div class="d-flex justify-content-between fw-bold fs-4">
                        <span>Total</span>
                        <span>@Model?.Total.ToString("C")</span>
                    </div>
                </div>

                @if (Model?.CartItems?.Any() == true)
                {
                    <a asp-controller="Order" asp-action="PlaceOrder" class="btn btn-white w-100 mt-4 py-2 fs-5">
                        <i class="ri-secure-payment-line align-bottom"></i> Proceed to Checkout
                    </a>
                }
                else
                {
                    <button class="btn btn-white w-100 mt-4 py-2 fs-5 disabled">
                        <i class="ri-secure-payment-line align-bottom"></i> Proceed to Checkout
                    </button>
                }
            </div>

            <!-- Payment Methods -->
            <div class="mt-4 text-center">
                <p class="fw-medium mb-3">We accept</p>
                <div class="d-flex justify-content-center">
                    <img src="~/assets/images/payment/visa.png" alt="Visa" class="payment-method-img">
                    <img src="~/assets/images/payment/paypal.png" alt="PayPal" class="payment-method-img">
                </div>
            </div>
        </div>
    </div>
</section>
<script src="./assets/js/vendor.bundle.js"></script>